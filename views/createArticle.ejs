<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lomo Blog - Create your article</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- Bootstrap css -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Fontawesome CDN -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <%- include("partials/googleAnalytics") %>
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="container mt-4 mb-4">
      <div class="row">
        <div class="col-lg-12">
          <form
            class="needs-validation"
            action="/admin/createArticle"
            method="post"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="title">Ingrese titulo</label>
              <input
                required
                maxlength="255"
                minlength="5"
                class="form-control"
                type="text"
                name="title"
                id="title"
              />

              <div class="valid-feedback">Titulo ok!</div>

              <div class="invalid-feedback">
                <p>Max chars: 255</p>
                <p>Min chars: 5</p>
                <p>Title required</p>
              </div>
            </div>

            <div class="mb-3">
              <label for="image" class="form-label"
                >Ingrese la url de la imágen</label
              >
              <input
                required
                maxlength="21844"
                minlength="5"
                class="form-control"
                type="text"
                name="image"
                id="image"
              />

              <div class="valid-feedback">Imáge ok!</div>

              <div class="invalid-feedback">
                <p>Must be an url image path</p>
                <p>Max chars: 21844</p>
                <p>Min chars: 5</p>
              </div>
            </div>

            <div class="mb-3">
              <label for="author" class="form-label">Author</label>
              <select class="form-select" name="author_id" id="author">
                <ul>
                  <% if (users) { %> <% users.forEach(function(user){ %>
                  <option value="<%- user.id %>">
                    <%- user.firstname %> <%- user.lastname %>
                  </option>
                  <% }); %> <% } %>
                </ul>
              </select>

              <div class="valid-feedback">Author ok!</div>

              <div class="invalid-feedback">
                <p>Kindly select an author</p>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="content">Ingrese contenido</label>
              <textarea
                class="form-control"
                name="content"
                id="content"
                cols="30"
                rows="10"
                required
                maxlength="21844"
                minlength="5"
              ></textarea>
              <div class="valid-feedback">Content ok!</div>

              <div class="invalid-feedback">
                <p>Máximos carácteres 21844</p>
                <p>Minimos carácteres 5</p>
                <p>Requerido</p>
              </div>
            </div>
            <div class="mb-3">
              <button class="btn btn-primary" type="submit">
                Create Article
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>

    <!-- JS bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (function () {
        "use strict";

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll(".needs-validation");

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
